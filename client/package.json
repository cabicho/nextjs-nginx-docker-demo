{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "lint": "yarn eslint && yarn typecheck",
    "typecheck": "tsc -p .",
    "eslint": "eslint '**/*.{ts,tsx}'",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "prettier": "prettier '**/{*.{js?(on),ts?(x),md,scss},.*.js?(on)}' --write --list-different",
    "prettier:check": "yarn -s prettier --write=false"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "@next/next/no-img-element": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@types/node": "17.0.21",
    "@types/react": "17.0.41",
    "@typescript-eslint/parser": "^5.15.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "autoprefixer": "^10.4.0",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.1",
    "tailwindcss": "^3.0.7",
    "typescript": "4.6.2"
  }
}
